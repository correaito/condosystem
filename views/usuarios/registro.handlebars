<div class="row justify-content-center align-items-center" style="min-height: 75vh;">
  <div class="col-md-5">
    <div class="card mb-3">
      <div class="card-header text-white text-center font-weight-bold" style="background-color: #1e5252;">
        Registro do Sistema
      </div>
      <div class="card-body p-4">
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}

        <form action="" method="post">
          <div class="md-form">
            <input type="text" id="nome" name="nome" class="form-control" required>
            <label for="nome">Nome</label>
          </div>
          <div class="md-form">
            <input type="text" id="telefone" name="telefone" class="form-control" required>
            <label for="telefone">Telefone</label>
          </div>
          <div class="md-form">
            <input type="text" id="apto" name="apto" class="form-control" required>
            <label for="apto">Apto</label>
          </div>
          <div class="md-form">
            <input type="email" id="email" name="email" class="form-control" required>
            <label for="email">Email</label>
          </div>
          <div class="md-form">
            <input type="password" id="senha" name="senha" class="form-control" required>
            <label for="senha">Senha</label>
          </div>
          <div class="md-form">
            <input type="password" id="senha2" name="senha2" class="form-control" required>
            <label for="senha2">Repita a sua senha</label>
          </div>
          <button type="submit" class="btn btn-success btn-block mt-4 waves-effect waves-light">Criar conta</button>
        </form>
      </div>
    </div>
  </div>
</div>