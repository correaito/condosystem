{{#if moradores.length}}
<div class="container col-md-12">
  <div class="card mb-3 z-depth-1">
    <div class="card-header">
      Listagem de Moradores
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table mt-3 mb-2 table-hover table-striped" id="tabela-moradores">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Apartamento</th>
              <th>Telefone</th>
              <th>Situação</th>
              <th>Saldo</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each moradores}}
            <tr>
              <td class="text-nowrap">{{nome}}</td>
              <td class="text-nowrap">{{email}}</td>
              <td>{{apto}}</td>
              <td>{{telefone}}</td>
              <td class="text-nowrap">{{situacao}}</td>
              <td>{{saldo}}</td>
              <td>
                <a href="/admin/editar_morador/{{_id}}" class="btn btn-warning btn-sm waves-effect waves-light"><i
                    title="Editar" class="fa-regular fa-pen-to-square"></i></a>
              </td>
              <td>
                <a href="/admin/excluir_morador/{{_id}}"
                  onclick="return confirm('Tem certeza que deseja excluir este morador?');"
                  class="btn btn-danger btn-sm waves-effect waves-light"><i title="Excluir"
                    class="fa-regular fa-trash-can"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="alert alert-info">Não há moradores cadastrados.</div>
{{/if}}